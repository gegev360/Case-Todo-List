<h2>Editar Perfil</h2>

<%= form_with model: @user, url: user_path(@user), method: :patch do |form| %>
  <% if @user.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@user.errors.count, "erro") %> impediu a atualização do perfil:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name, "Nome" %>
    <%= form.text_field :first_name, required: true, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :last_name, "Sobrenome" %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :password, "Nova senha (deixe em branco para manter a atual)" %>
    <%= form.password_field :password %>
    <small>Mínimo de 6 caracteres</small>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, "Confirme a nova senha" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit "Atualizar perfil" %>
  </div>
<% end %>

<div class="links">
  <%= link_to "Voltar ao perfil", user_path(@user) %>
</div> 