<li class="list-group-item d-flex justify-content-between align-items-center <%= 'completed-item' if item.completed %>" id="<%= dom_id(item) %>">
  <div class="<%= item.completed ? 'completed' : '' %> flex-grow-1">
    <%= item.description %>
  </div>
  <div class="btn-group" style="min-width: 85px;">
    <% if item.completed %>
      <%= button_to toggle_complete_todo_list_item_path(todo_list, item), 
                  method: :patch, 
                  class: "btn btn-sm btn-success me-2 task-toggle", 
                  form: { data: { turbo_stream: true } },
                  title: "Marcar como não concluída" do %>
        <span class="normal-state">✓</span>
        <span class="hover-state" style="display: none;">✗</span>
      <% end %>
    <% else %>
      <%= button_to toggle_complete_todo_list_item_path(todo_list, item), 
                  method: :patch, 
                  class: "btn btn-sm btn-outline-success me-2 task-toggle", 
                  form: { data: { turbo_stream: true } },
                  title: "Marcar como concluída" do %>
        <span class="normal-state">☐</span>
        <span class="hover-state" style="display: none;">✓</span>
      <% end %>
    <% end %>
    <%= button_to todo_list_item_path(todo_list, item), 
                method: :delete, 
                class: "btn btn-sm btn-danger", 
                form: { data: { turbo_stream: true, turbo_confirm: "Tem certeza?" } },
                title: "Excluir item" do %>
      🗑
    <% end %>
  </div>
</li> 