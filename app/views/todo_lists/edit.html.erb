<div class="row mb-4">
  <div class="col">
    <h1>Editar Lista de Tarefas</h1>
  </div>
  <div class="col-auto">
    <%= link_to "Voltar", todo_list_path(@todo_list), class: "btn btn-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @todo_list, local: true) do |form| %>
          <% if @todo_list.errors.any? %>
            <div class="alert alert-danger">
              <h4 class="alert-heading"><%= pluralize(@todo_list.errors.count, "erro") %> encontrado:</h4>
              <ul>
                <% @todo_list.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, "Título", class: "form-label" %>
            <%= form.text_field :title, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :description, "Descrição", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 5 %>
          </div>

          <div class="d-grid gap-2">
            <%= form.submit "Atualizar Lista", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
