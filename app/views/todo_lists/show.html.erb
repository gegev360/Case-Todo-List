<div class="row mb-4">
  <div class="col">
    <h1><%= @todo_list.title %></h1>
    <p class="text-muted"><%= @todo_list.description %></p>
  </div>
  <div class="col-auto">
    <div class="btn-toolbar">
      <div class="btn-group me-2">
        <%= link_to "Voltar", todo_lists_path, class: "btn btn-secondary" %>
        <%= link_to "Editar", edit_todo_list_path(@todo_list), class: "btn btn-primary" %>
      </div>
      <div class="btn-group">
        <%= button_to "Excluir", todo_list_path(@todo_list), method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Tem certeza?" } } %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Itens</h4>
        <%= render 'items_counter', todo_list: @todo_list %>
      </div>
      <ul class="list-group list-group-flush" id="items">
        <% if @todo_list.items.empty? %>
          <li class="list-group-item text-center">
            Nenhum item nesta lista. Adicione um novo!
          </li>
        <% else %>
          <% @todo_list.items.each do |item| %>
            <%= render 'item', item: item, todo_list: @todo_list %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0">Adicionar novo item</h4>
      </div>
      <div class="card-body">
        <%= render 'form', todo_list: @todo_list %>
      </div>
    </div>
  </div>
</div>
