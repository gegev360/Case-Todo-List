<div class="row mb-4">
  <div class="col">
    <h1><%= @todo_list.title %></h1>
    <p class="text-muted"><%= @todo_list.description %></p>
  </div>
  <div class="col-auto">
    <%= link_to "Voltar", todo_lists_path, class: "btn btn-secondary" %>
    <%= link_to "Editar", edit_todo_list_path(@todo_list), class: "btn btn-primary" %>
    <%= button_to "Excluir", todo_list_path(@todo_list), method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Tem certeza?" } } %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Itens</h4>
        <span class="badge bg-primary"><%= @todo_list.items.count %> itens</span>
      </div>
      <ul class="list-group list-group-flush">
        <% if @todo_list.items.empty? %>
          <li class="list-group-item text-center">
            Nenhum item nesta lista. Adicione um novo!
          </li>
        <% else %>
          <% @todo_list.items.each do |item| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="<%= item.completed ? 'completed' : '' %>">
                <%= item.description %>
              </div>
              <div>
                <%= button_to toggle_complete_todo_list_item_path(@todo_list, item), method: :patch, class: "btn btn-sm #{item.completed ? 'btn-success' : 'btn-outline-success'}" do %>
                  <%= item.completed ? "✓" : "☐" %>
                <% end %>
                <%= button_to todo_list_item_path(@todo_list, item), method: :delete, class: "btn btn-sm btn-danger", form: { data: { turbo_confirm: "Tem certeza?" } } do %>
                  🗑
                <% end %>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0">Adicionar novo item</h4>
      </div>
      <div class="card-body">
        <%= form_with(model: [@todo_list, @todo_list.items.build], local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :description, "Descrição", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 3, required: true %>
          </div>
          <%= form.submit "Adicionar Item", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
